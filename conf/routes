# Routes
# This file defines all application routes (Higher priority routes first)

GET     /                           controllers.Documentation.doc()
POST    /account/login              controllers.Account.loginPost()
GET     /account/check              controllers.Account.checkAuth(number, session, cs)
GET     /yank/menu                  controllers.Yank.menu(number, session)
GET     /yank/:page                 controllers.Yank.yank(page, number, session, cs)
GET     /moodle                     controllers.Redirect.moodle(number, session, cs)
GET     /subjects/enrolled          controllers.Subjects.enrolled(number, session, cs)
GET     /campuses                   controllers.Timetables.campuses()
GET     /timetables/id/:id          controllers.Timetables.get(id: Int)
GET     /timetables/search/:code    controllers.Timetables.search(code, year: Int ?= 0, campus: Int ?= 1)
GET     /descriptions/id/:id        controllers.Descriptions.get(id: Int, code, faculty: Int, year: Int)
GET     /descriptions/search/:code  controllers.Descriptions.search(code, year: Int ?= 0)
